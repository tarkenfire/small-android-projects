<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="InputBox">
        <item name="android:textSize">16.0sp</item>
        <item name="android:paddingBottom">5dp</item>
   		<item name="android:textStyle">bold</item>
   		<item name="android:layout_marginBottom">5dp</item>
    </style>
    
    <style name="SubButton">
        <item name="android:background">@drawable/button_back</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">7dp</item>
        
    </style>
    
    <style name="TitleText">
        <item name="android:textColor">#71007F</item>
        <item name="android:shadowColor">#E900FF</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:textSize">24.0sp</item>
    </style>
    
    <style name="MinorTitleText">
        <item name="android:textColor">#71007F</item>
        <item name="android:shadowColor">#E900FF</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">18.0sp</item>
        
    </style>
	
    <style name="DetailText"></style>
    
</resources>
